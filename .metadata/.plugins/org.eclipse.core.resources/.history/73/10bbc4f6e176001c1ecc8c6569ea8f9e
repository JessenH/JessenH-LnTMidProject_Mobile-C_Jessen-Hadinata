			System.out.println("3. Rent movie");
			System.out.println("4. Exit");
			
			do {
			try {
				
	            System.out.print(">> ");
	            menu = scan.nextInt();
	   
			} catch (Exception e) {
				menu = 0;
				System.out.println("Number must be between 1-4");
			}
				scan.nextLine();
			} while (menu < 1 || menu > 4);
			
			switch (menu) {
			case 1:
				String title = "", genre = "";
				
				do {
					System.out.print("Add movie title: ");
					title  = scan.nextLine();
					
				} while (title.length() < 3 ||title.length() < 20 );
				titleList.add(title);
								
				do {
					System.out.print("Add movie genre: ");
					genre = scan.nextLine();
							
				} while ( );
				
				break;
			case 2:
				
				
				break;
			case 3:	
				
				
				break;
			}
			
			
			
		
	
		
		} while (menu != 4);
		
		
		
		
		

		
		
	}

	public static void main(String[] args) {
		new Main();

	}

}
